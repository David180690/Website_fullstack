name: Deploy Node Application

on:
  push:
    branches:
      - main
      - stage
  workflow_dispatch:  # Allows manual triggering of the workflow

jobs:
  deploy:
    runs-on: n500  # Use your self-hosted runner
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2
        
      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '14'  # Specify the Node.js version

      - name: Install Dependencies
        working-directory: ./backend  # Set working directory to the backend folder
        run: npm install  # Install your Node.js dependencies

      - name: Build Application (if needed)
        working-directory: ./backend  # Set working directory to the backend folder
        run: npm run build  # Replace with your build command if applicable

      - name: Start Application
        working-directory: ./backend  # Set working directory to the backend folder
        run: npm start  # Or your start command
